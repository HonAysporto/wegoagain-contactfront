        <input type="text" placeholder="Description" onChange={(e)=>setdescription(e.target.value)} value={description}/>
        <input type="text" placeholder="Home Address" onChange={(e)=>sethomeaddress(e.target.value)} value={homeaddress}/>
        <input type="text" placeholder="Email Address" onChange={(e)=>setemail(e.target.value)} value={email}/>
        <input type="number" placeholder="Phone Number" onChange={(e)=>setnumber(e.target.value)} value={number}/>
